<h1>Subcategories#new</h1>

<%= form_with(model: @subcategory, local: true) do |f|%>
    <div>
        <%= f.label :name, 'nombre'%>
        <%= f.text_field :name%>
      
    </div>
    <div>
        <%= f.label :bookmark_id, 'Marcador'%>
        <%= f.select :bookmark_id, options_from_collection_for_select(@bookmarks, :id, :url), selected: 0, prompt: 'Elige el marcador'%>
    </div>
    <div>
        <%= f.label :category_id, 'category'%>
        <%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name), selected: 0, prompt: 'Elige category'%>
    </div>
    <%= f.submit 'Guardar'%>
<% end %>